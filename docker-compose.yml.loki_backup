version: '3.8'
services:
  # ... (other services same as before)
  
  # Logging - Loki (INTERNAL ONLY, using Loki 3.0+ with memory storage)
  loki:
    image: grafana/loki:latest
    user: root
    volumes:
      - ./loki-config.yaml:/etc/loki/local-config.yaml
    networks:
      - clisonix
    command:
      - "-config.file=/etc/loki/local-config.yaml"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3100/loki/api/v1/status/buildinfo"]
      interval: 30s
      timeout: 10s
      retries: 3

networks:
  clisonix:
    driver: bridge

volumes:
  postgres_data:
  redis_data:
  minio_data:
  victoria_data:
  prometheus_data:
  grafana_data:
  loki_data:
  tempo_data:
